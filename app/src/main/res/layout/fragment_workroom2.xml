<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/id_ll_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f6f6f6"
        android:orientation="vertical"
        android:paddingBottom="40dp">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="188dp" />

        <!--垂直跑马灯-->
        <LinearLayout
            android:id="@+id/llt_shownotice"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/color_main"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/icon_voice_white" />

            <TextView
                android:id="@+id/tv_notification"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="这是一条消息这是一条消息这是一条消息这是一条消息这是一条消息这是一条消息"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_add_patient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/selector_add_patient_icon"
                android:gravity="center"
                android:padding="12dp"
                android:text="添加患者"
                android:textColor="@drawable/selector_textcolor_blackmain"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_online_paper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/selector_online_icon"
                android:gravity="center"
                android:padding="12dp"
                android:text="在线开方"
                android:textColor="@drawable/selector_textcolor_blackmain"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_camera_patient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/selector_camera_icon"
                android:gravity="center"
                android:padding="12dp"
                android:text="拍照开方"
                android:textColor="@drawable/selector_textcolor_blackmain"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_comm_paper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/selector_commpaper_icon"
                android:gravity="center"
                android:padding="12dp"
                android:text="常用处方"
                android:textColor="@drawable/selector_textcolor_blackmain"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_ask_paper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/selector_askpaper_icon"
                android:gravity="center"
                android:padding="12dp"
                android:text="问诊单"
                android:textColor="@drawable/selector_textcolor_blackmain"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_flow_paper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/selector_followpaper_icon"
                android:gravity="center"
                android:padding="12dp"
                android:text="随诊单"
                android:textColor="@drawable/selector_textcolor_blackmain"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_checkpaper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/selector_checkpaper_icon"
                android:gravity="center"
                android:padding="12dp"
                android:text="审核开方"
                android:textColor="@drawable/selector_textcolor_blackmain"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/selector_notice_icon"
                android:gravity="center"
                android:padding="12dp"
                android:text="公告"
                android:textColor="@drawable/selector_textcolor_blackmain"
                android:textSize="14sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlt_service"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@drawable/selector_bg_tab"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:id="@+id/iv_service_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/default_head" />

            <TextView
                android:id="@+id/tv_service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_service_img"
                android:layout_toEndOf="@+id/iv_service_img"
                android:text="咨询客服"
                android:textColor="@color/color_000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_service_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_service_img"
                android:layout_toEndOf="@+id/iv_service_img"
                android:text="最后一次的内容"
                android:textColor="@color/color_d6d6d6"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_service_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/tv_service_name"
                android:text="上午11：20"
                android:textColor="@color/color_d6d6d6"
                android:textSize="12sp" />

            <View
                style="@style/line_gray_hor"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <com.renxin.doctor.activity.widget.RelativeWithImage
            android:id="@+id/id_history"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:leftIamge="@drawable/icon_history"
            app:title="历史记录" />

        <com.renxin.doctor.activity.widget.RelativeWithImage
            android:id="@+id/id_notification"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:isShowLine="false"
            app:leftIamge="@drawable/icon_voice"
            app:title="消息通知" />

    </LinearLayout>
</ScrollView>