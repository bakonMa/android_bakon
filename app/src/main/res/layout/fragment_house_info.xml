<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="住宅类型"
            android:textColor="@color/color_000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_hourse_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/color_000"
            tools:text="商住" />

        <View
            style="@style/line_gray_hor"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_buy_money_rlt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="购买金额"
            android:textColor="@color/color_000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_buy_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/color_000"
            android:textSize="14sp"
            tools:text="2000000元" />

        <View
            style="@style/line_gray_hor"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_rent_money_rlt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="月出租金额"
            android:textColor="@color/color_000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_rent_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/color_000"
            android:textSize="14sp"
            tools:text="200000元" />

        <View
            style="@style/line_gray_hor"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="住宅面积"
            android:textColor="@color/color_000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_hours_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/color_000"
            android:textSize="14sp"
            tools:text="45.6平米" />

        <View
            style="@style/line_gray_hor"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="小区名称"
            android:textColor="@color/color_000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_hours_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/color_000"
            android:textSize="14sp"
            tools:text="幸福小区" />

        <View
            style="@style/line_gray_hor"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="住宅地址"
            android:textColor="@color/color_000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_hourse_are"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="15dp"
            android:textColor="@color/color_000"
            android:textSize="14sp"
            tools:text="上海市-浦东新区" />

        <TextView
            android:id="@+id/tv_house_address"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/tv_hourse_are"
            android:padding="15dp"
            android:textColor="@color/color_000"
            tools:text="沪南路980弄12号" />

        <View
            style="@style/line_gray_hor"
            android:layout_above="@id/tv_house_address" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="是否有借款"
            android:textColor="@color/color_000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_ishas_borrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="15dp"
            android:textColor="@color/color_000"
            android:textSize="14sp"
            tools:text="是" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlt_borrow_from"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:visibility="gone">

        <View
            style="@style/line_gray_hor"
            android:layout_alignParentTop="true"
            android:paddingRight="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="借款机构"
            android:textColor="@color/color_000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_borrow_from"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="15dp"
            android:textColor="@color/color_000"
            android:textSize="14sp"
            tools:text="银行" />

        <View
            style="@style/line_gray_hor"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlt_borrow_money"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="借款金额"
            android:textColor="@color/color_000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_borrow_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="15dp"
            android:textColor="@color/color_000"
            android:textSize="14sp"
            tools:text="20,000,000.00元" />
    </RelativeLayout>

</LinearLayout>

