<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/id_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:minWidth="80dp"
        android:textColor="@color/color_000"
        android:textSize="16sp"
        tools:text="姓名" />

    <EditText
        android:id="@+id/id_layout_edittext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/id_tv_left"
        android:background="@null"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_000"
        android:textSize="14sp"
        tools:hint="请输入姓名" />

    <TextView
        android:id="@+id/id_tv_show_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/id_tv_left"
        android:textColor="@color/color_000"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="少时诵诗书" />

    <ImageView
        android:id="@+id/id_btn_clear"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/icon_close_2"
        android:visibility="gone" />

    <!--密码 是否可见-->
    <CheckBox
        android:id="@+id/id_checkbox"
        android:layout_width="32dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:background="@drawable/selector_bg_checkbox"
        android:button="@null"
        android:checked="false"
        android:visibility="gone" />

    <View
        android:id="@+id/id_line"
        style="@style/line_gray_hor"
        android:layout_alignParentBottom="true" />
</RelativeLayout>