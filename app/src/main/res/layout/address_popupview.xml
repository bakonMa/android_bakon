<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_btn_cancel"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"
            android:textColor="#4F9EF3"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="请选择地区"
            android:textColor="@color/color_000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_btn_comfirm"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="完成"
            android:textColor="#4F9EF3"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_wheel1_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="省"
            android:textColor="@color/color_000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_wheel2_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="市"
            android:textColor="@color/color_000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_wheel3_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="区"
            android:textColor="@color/color_000"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.renxin.doctor.activity.widget.PickerView
            android:id="@+id/id_wheel1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:textSize="16sp"
            app:visibleCount="5" />

        <com.renxin.doctor.activity.widget.PickerView
            android:id="@+id/id_wheel2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:textSize="16sp"
            app:visibleCount="5" />

        <com.renxin.doctor.activity.widget.PickerView
            android:id="@+id/id_wheel3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:textSize="16sp"
            app:visibleCount="5" />
    </LinearLayout>
</LinearLayout>