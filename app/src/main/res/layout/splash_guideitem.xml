<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/id_tv3"
        android:layout_marginBottom="18dp">
        <TextView
            android:id="@+id/id_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="@color/color_main"
            android:text=""/>
        <TextView
            android:id="@+id/id_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="@color/black"
            android:text=""/>
    </LinearLayout>

    <TextView
        android:id="@+id/id_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/splash_tv_color"
        android:text=""
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="108dp"/>
    <TextView
        android:id="@+id/id_btn_enter"
        android:layout_width="129dp"
        android:layout_height="36dp"
        android:text="立即体验"
        android:gravity="center"
        android:clickable="true"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/selector_bg_splash_button"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginBottom="56dp"/>
</RelativeLayout>