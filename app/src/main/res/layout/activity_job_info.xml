<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_activity_job_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_main"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_5b6187"
        android:gravity="center"
        android:text="借款信息提交后将不能修改，请仔细核对"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="@color/white">

        <com.renxin.doctor.activity.widget.ScheduleView
            android:id="@+id/id_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:step="second" />
    </RelativeLayout>

    <com.renxin.doctor.activity.widget.EditableLayout
        android:id="@+id/id_ed_company_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:edit_editTextHint="请输入您的公司名称"
        app:edit_leftText="公司名称"
        app:edit_mode="edit"
        app:edit_textMainSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color_line" />

    <com.renxin.doctor.activity.widget.EditableLayout
        android:id="@+id/id_ed_company_nature"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:edit_leftText="公司性质"
        app:edit_mode="select"
        app:edit_textMainSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color_line" />

    <com.renxin.doctor.activity.widget.EditableLayout
        android:id="@+id/id_ed_job_industry"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:edit_leftText="工作行业"
        app:edit_mode="select"
        app:edit_textMainSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color_line" />

    <com.renxin.doctor.activity.widget.EditableLayout
        android:id="@+id/id_ed_job_rank"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:edit_leftText="职位级别"
        app:edit_mode="select"
        app:edit_textMainSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color_line" />

    <com.renxin.doctor.activity.widget.EditableLayout
        android:id="@+id/id_ed_month_income"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:edit_editTextHint="请输入"
        app:edit_editTextType="number"
        app:edit_leftText="月工资收入"
        app:edit_mode="edit"
        app:edit_textMainSize="14sp" />

    <TextView
        android:id="@+id/id_btn_next_step"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/selector_bg_button_login"
        android:clickable="true"
        android:enabled="true"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
