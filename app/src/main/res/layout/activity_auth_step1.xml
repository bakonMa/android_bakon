<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/color_main">

                <com.renxin.doctor.activity.widget.ScheduleView_jht
                    android:id="@+id/id_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:step1="one" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="展示自我形象"
                android:textColor="@color/color_c3c3c3"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="头像"
                    android:textColor="@color/color_424242"
                    android:textSize="15sp" />

                <View style="@style/line_gray_hor" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_img1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/img_default_1"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="32dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/sample_idcard" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/attention"
                    android:drawablePadding="5dp"
                    android:paddingBottom="10dp"
                    android:text="@string/str_jpg_png_gif"
                    android:textColor="@color/color_c3c3c3"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_mustwrite"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="以下均为必填项"
                android:textColor="@color/color_c3c3c3"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <com.renxin.doctor.activity.widget.EditTextlayout
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:leftText="姓名"
                    app:maxLength="20"
                    app:textMainSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp">

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="性别"
                        android:textColor="@color/color_333"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/rg_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/tv_sex"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_nan"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:button="@drawable/selector_radiobutton"
                            android:checked="true"
                            android:paddingLeft="20dp"
                            android:text="男"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/rb_nv"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:button="@drawable/selector_radiobutton"
                            android:paddingLeft="20dp"
                            android:text="女"
                            android:textSize="16sp" />
                    </RadioGroup>

                    <View
                        style="@style/line_gray_hor"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>

                <com.renxin.doctor.activity.widget.EditableLayout
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:edit_leftText="地区"
                    app:edit_mode="select"
                    app:edit_textMainSize="16sp" />

                <com.renxin.doctor.activity.widget.EditableLayout
                    android:id="@+id/et_organization"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:edit_leftText="医疗机构"
                    app:edit_mode="select"
                    app:edit_textMainSize="16sp" />

                <com.renxin.doctor.activity.widget.EditableLayout
                    android:id="@+id/et_lab_type"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:edit_leftText="科室"
                    app:edit_mode="select"
                    app:edit_textMainSize="16sp" />

                <com.renxin.doctor.activity.widget.EditableLayout
                    android:id="@+id/et_title"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:edit_leftText="职称"
                    app:edit_mode="select"
                    app:edit_textMainSize="16sp" />

                <com.renxin.doctor.activity.widget.EditableLayout
                    android:id="@+id/et_goodat"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    app:edit_leftText="擅长"
                    app:edit_mode="select"
                    app:edit_textMainSize="16sp"
                    app:isShowLineBottom="false" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_next_step"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_margin="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/selector_bg_button_login"
                android:clickable="true"
                android:enabled="true"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
