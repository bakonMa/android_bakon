<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_activity_add_coborrower"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_main"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar" />

    <com.junhetang.doctor.widget.EditTextlayout
        android:id="@+id/id_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:editTextHint="请输入共借人姓名"
        app:leftText="姓名"
        app:textMainSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color_line" />

    <com.junhetang.doctor.widget.EditTextlayout
        android:id="@+id/id_edit_idcard"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:editTextHint="请输入共借人身份证号"
        app:leftText="身份证号"
        app:textMainSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color_line" />

    <com.junhetang.doctor.widget.EditTextlayout
        android:id="@+id/id_edit_phone"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:editTextHint="请输入手机号码"
        app:editTextType="number"
        app:leftText="手机号码"
        app:textMainSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color_line" />

    <com.junhetang.doctor.widget.EditableLayout
        android:id="@+id/id_edit_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:edit_leftText="身份证地址"
        app:edit_mode="select"
        app:edit_textMainSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/id_ed_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="start"
            android:hint="请输入详细地址"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <com.junhetang.doctor.widget.EditableLayout
        android:id="@+id/id_edit_relation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:edit_leftText="与主借人关系"
        app:edit_mode="select"
        app:edit_textMainSize="14sp" />

    <Button
        android:id="@+id/btn_comfirm"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/selector_bg_button_login"
        android:enabled="false"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
