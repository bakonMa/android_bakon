<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/shape_bg_corner_5"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="处方名称"
        android:textColor="@color/color_666"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_papername"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/shape_stroke_graybg_1"
        android:maxLength="20"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/color_333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_remark"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="备注"
        android:textColor="@color/color_666"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_stroke_graybg_1"
        android:maxLength="30"
        android:maxLines="2"
        android:minHeight="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/color_333"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_bg_button_login"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_no"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:background="@drawable/shape_bg_cancel"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>