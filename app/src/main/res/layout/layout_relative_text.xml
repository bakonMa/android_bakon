<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_bg_tab">

    <TextView
        android:id="@+id/id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text=""
        android:textColor="@color/color_000"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/id_iv_arrow"
        android:layout_width="4.7dp"
        android:layout_height="8.4dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/icon_xuanze" />

    <TextView
        android:id="@+id/id_tv_tab"
        android:layout_width="42dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/selector_tab_bg"
        android:enabled="false"
        android:gravity="center"
        android:text="未认证"
        android:textColor="@color/tab_unselected"
        android:textSize="11sp"
        android:visibility="gone" />

    <View
        android:id="@+id/id_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_line" />
</RelativeLayout>
