<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/id_rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">
        <TextView
            android:id="@+id/id_label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="期数"
            android:textSize="14sp"
            android:textColor="@color/color_999"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/id_tv_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/id_label1"
            android:layout_alignBottom="@+id/id_label1"
            android:layout_toEndOf="@+id/id_label1"
            android:layout_toRightOf="@+id/id_label1"
            android:text=""
            android:textColor="@color/color_999"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/id_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应还总计："
            android:textSize="14sp"
            android:textColor="@color/color_333"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="38dp"/>
        <TextView
            android:id="@+id/id_tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/color_333"
            android:layout_toRightOf="@+id/id_label2"
            android:layout_marginTop="38dp"/>
        <TextView
            android:id="@+id/id_label3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余应还："
            android:textSize="14sp"
            android:textColor="@color/color_333"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="62dp"/>
        <TextView
            android:id="@+id/id_tv_remain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/color_333"
            android:layout_toRightOf="@+id/id_label2"
            android:layout_marginTop="62dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/id_tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:textColor="@color/color_4f9ef3"/>
            <ImageView
                android:id="@+id/id_iv_triangle"
                android:layout_width="9dp"
                android:layout_height="6dp"
                android:src="@drawable/icon_sj_4"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/id_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical"
        android:paddingBottom="18dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还款本金"
                android:textSize="12sp"
                android:textColor="@color/color_999"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:id="@+id/id_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:layout_marginRight="25dp"
                android:textColor="@color/color_444"
                android:layout_marginLeft="25dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还款利息"
                android:textSize="12sp"
                android:textColor="@color/color_999"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:id="@+id/id_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:layout_marginRight="25dp"
                android:textColor="@color/color_444"
                android:layout_marginLeft="25dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分期服务费"
                android:textSize="12sp"
                android:textColor="@color/color_999"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:id="@+id/id_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:layout_marginRight="25dp"
                android:textColor="@color/color_444"
                android:layout_marginLeft="25dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/id_rl4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/id_label4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="逾期违约金"
                android:textSize="12sp"
                android:textColor="@color/color_999"
                android:layout_marginLeft="25dp"/>
            <RelativeLayout
                android:id="@+id/id_rl_click"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/id_label4"
                android:layout_marginLeft="4dp"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/id_img_what"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_question" />
            </RelativeLayout>

            <TextView
                android:id="@+id/id_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:layout_marginRight="25dp"
                android:textColor="@color/color_444"
                android:layout_marginLeft="25dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/id_rl5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="违约金减免"
                android:textColor="@color/color_999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/id_tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text=""
                android:textColor="@color/color_444"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line"/>
</LinearLayout>