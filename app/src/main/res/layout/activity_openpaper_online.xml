<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_addpatient"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_bg_tab"
                    android:gravity="center"
                    android:text="选择就诊人"
                    android:textColor="@color/color_main"
                    android:textSize="16sp" />

                <View
                    style="@style/line_gray_ver"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/tv_editepatient"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_bg_tab"
                    android:gravity="center"
                    android:text="填写就诊人"
                    android:textColor="@color/color_main"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llt_jzinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:text="就诊人信息"
                        android:textColor="@color/color_999"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_choose_history"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:drawableRight="@drawable/icon_yellow_arrow_right"
                        android:gravity="center"
                        android:paddingRight="15dp"
                        android:text="处方联系人"
                        android:textColor="@color/color_main"
                        android:textSize="14sp"
                        android:visibility="gone" />

                </RelativeLayout>

                <com.junhetang.doctor.widget.EditTextlayout
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    app:editTextHint="就诊人姓名"
                    app:leftText="姓名"
                    app:maxLength="10"
                    app:textMainSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="性别"
                        android:textColor="@color/color_000"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/rg_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/tv_sex"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_nan"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:button="@drawable/selector_radiobutton"
                            android:checked="true"
                            android:paddingLeft="20dp"
                            android:text="男"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/rb_nv"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:button="@drawable/selector_radiobutton"
                            android:paddingLeft="20dp"
                            android:text="女"
                            android:textSize="16sp" />
                    </RadioGroup>

                    <View
                        style="@style/line_gray_hor"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>

                <com.junhetang.doctor.widget.EditTextlayout
                    android:id="@+id/et_age"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    app:editTextHint="就诊人年龄"
                    app:editTextType="number"
                    app:leftText="年龄"
                    app:maxLength="3"
                    app:textMainSize="16sp" />

                <com.junhetang.doctor.widget.EditTextlayout
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    app:editTextHint="就诊人手机号"
                    app:editTextType="number"
                    app:leftText="联系电话"
                    app:maxLength="11"
                    app:textMainSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="主述及辩证型"
                    android:textColor="@color/color_000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_skillname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="top|start"
                    android:hint="患者病症描述（非必填）"
                    android:lineSpacingExtra="5dp"
                    android:minLines="3"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/color_000"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_skillname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:text="请选择病名或证型"
                    android:textColor="@color/color_999"
                    android:textSize="16sp"
                    android:visibility="gone" />

            </LinearLayout>

            <com.junhetang.doctor.widget.EditableLayout
                android:id="@+id/et_drugstore"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:edit_editTextHint="请选择药房"
                app:edit_leftText="药房"
                app:edit_mode="select"
                app:edit_textMainSize="16sp"
                app:isShowLineBottom="false" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="处方"
                    android:textColor="@color/color_000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_addcommpaper"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="保存为常用处方"
                    android:textColor="@color/color_main"
                    android:textSize="12sp" />

                <View
                    style="@style/line_gray_hor"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="药名"
                    android:textColor="@color/color_000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="用量"
                    android:textColor="@color/color_000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="用法"
                    android:textColor="@color/color_000"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                style="@style/line_gray_hor"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    style="@style/line_gray_hor"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp" />

                <TextView
                    android:id="@+id/tv_showall"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:drawablePadding="2dp"
                    android:drawableRight="@drawable/selector_updown_icon"
                    android:gravity="center"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:text="展开"
                    android:textColor="@color/color_000"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_adddrug"
                    android:layout_width="120dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_stroke_graybg_1"
                    android:gravity="center"
                    android:text="编辑药材"
                    android:textColor="@color/color_main"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="温馨提示：汤剂代煎费及其他剂型加工费，以药房实际计算为准。"
                android:textColor="@color/color_999"
                android:textSize="10sp" />

            <com.junhetang.doctor.widget.EditableLayout
                android:id="@+id/et_drugclass"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone"
                app:edit_editTextHint="请选择剂型"
                app:edit_leftText="剂型"
                app:edit_mode="select"
                app:edit_textMainSize="16sp" />

            <RelativeLayout
                android:id="@+id/rlt_daijian"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_temp"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="代煎"
                    android:textColor="@color/color_000"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rg_daijian"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tv_temp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_yes"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:button="@drawable/selector_radiobutton"
                        android:paddingLeft="20dp"
                        android:text="是"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rb_no"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:button="@drawable/selector_radiobutton"
                        android:checked="true"
                        android:paddingLeft="20dp"
                        android:text="否"
                        android:textSize="16sp" />
                </RadioGroup>

                <View
                    style="@style/line_gray_hor"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llt_num"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="副数"
                    android:textColor="@color/color_000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_num"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入副数"
                    android:inputType="number"
                    android:maxLength="2"
                    android:paddingRight="30dp"
                    android:singleLine="true"
                    android:text="1"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="副"
                    android:textColor="@color/color_000"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                style="@style/line_gray_hor"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <com.junhetang.doctor.widget.EditableLayout
                android:id="@+id/et_usetype"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone"
                app:edit_editTextHint="请选择用法用量"
                app:edit_leftText="用法用量"
                app:edit_mode="select"
                app:edit_textMainSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="诊疗费"
                    android:textColor="@color/color_000"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_serverprice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入诊疗费"
                    android:inputType="number"
                    android:maxLength="5"
                    android:paddingRight="30dp"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="元"
                    android:textColor="@color/color_000"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                style="@style/line_gray_hor"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <com.junhetang.doctor.widget.EditableLayout
                android:id="@+id/et_docadvice"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:edit_editTextHint="（必填）"
                app:edit_leftText="医嘱"
                app:edit_mode="select"
                app:edit_textMainSize="16sp"
                app:isShowLineBottom="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/str_money_list"
                android:textColor="@color/color_000"
                android:textSize="16sp" />

            <View
                style="@style/line_gray_hor"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/tv_temp1"
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:text="诊疗费"
                    android:textColor="@color/color_000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_money_service"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_toEndOf="@+id/tv_temp1"
                    android:gravity="center_vertical|right"
                    android:text="0元"
                    android:textColor="@color/color_000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_temp2"
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:layout_below="@+id/tv_temp1"
                    android:gravity="center_vertical"
                    android:text="药品金额"
                    android:textColor="@color/color_000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_money_drug"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_temp1"
                    android:layout_toEndOf="@+id/tv_temp2"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/color_000"
                    android:textSize="14sp"
                    tools:text="999.99元/副*7=80000.00元" />

                <TextView
                    android:id="@+id/tv_temp3"
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:layout_below="@+id/tv_temp2"
                    android:gravity="center_vertical"
                    android:text="总计"
                    android:textColor="@color/color_000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_money_total"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_temp2"
                    android:layout_toEndOf="@+id/tv_temp3"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/color_000"
                    android:textSize="14sp"
                    tools:text="809900.099元" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_next_step"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_margin="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/selector_bg_button_login"
                android:clickable="true"
                android:enabled="true"
                android:gravity="center"
                android:text="提交处方"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
