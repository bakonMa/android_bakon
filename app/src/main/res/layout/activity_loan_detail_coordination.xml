<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_main">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:elevation="0dp">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/id_collapsing"
                android:layout_width="match_parent"
                android:layout_height="263dp"
                app:contentScrim="@color/white"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:background="@color/color_bg_main"
                    android:orientation="vertical"
                    app:layout_collapseMode="pin">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="借款金额"
                                android:textColor="@color/color_999"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/id_tv_loan_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text=""
                                android:textColor="@color/color_main"
                                android:textSize="22sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/id_tv_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:text=""
                            android:textColor="@color/color_yellow"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_line_2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp">

                        <RelativeLayout
                            android:id="@+id/id_rl1"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="应还利息总计"
                                android:textColor="@color/color_999" />

                            <TextView
                                android:id="@+id/id_tv1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:text="1,200.00元"
                                android:textColor="@color/color_444" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:layout_marginTop="7dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="还款方式"
                                android:textColor="@color/color_999" />

                            <TextView
                                android:id="@+id/id_tv2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:text=""
                                android:textColor="@color/color_444" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:layout_marginTop="7dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="还款期数"
                                android:textColor="@color/color_999" />

                            <TextView
                                android:id="@+id/id_tv3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:text=""
                                android:textColor="@color/color_444" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/id_rl4"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:layout_marginTop="7dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="最后还款日"
                                android:textColor="@color/color_999" />

                            <TextView
                                android:id="@+id/id_tv4"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:text="每月05日"
                                android:textColor="@color/color_444" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/id_rl5"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:layout_marginTop="7dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="分期服务费总计"
                                android:textColor="@color/color_999" />

                            <TextView
                                android:id="@+id/id_tv5"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:text="700.00元"
                                android:textColor="@color/color_444" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/id_rl6"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:layout_marginTop="7dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="逾期违约金总计"
                                android:textColor="@color/color_999" />

                            <TextView
                                android:id="@+id/id_tv6"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:text="330.00元"
                                android:textColor="@color/color_444" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:layout_marginTop="7dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="订单编号"
                                android:textColor="@color/color_999" />

                            <TextView
                                android:id="@+id/id_tv7"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:text=""
                                android:textColor="@color/color_444" />
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/color_bg_main" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/color_bg_main" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/transparent"
                    android:gravity="top"
                    android:minHeight="65dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin"
                    app:titleMarginTop="15dp">

                    <RelativeLayout
                        android:id="@+id/id_rl_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:paddingTop="20dp"
                        android:background="@color/white">

                        <RelativeLayout
                            android:id="@+id/id_rl_back"
                            android:layout_width="50dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/icon_back_2" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:text="借款详情"
                            android:textColor="@color/toolbar_title"
                            android:textSize="16sp" />

                        <RelativeLayout
                            android:id="@+id/id_rl_right"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:paddingRight="15dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="借款人管理"
                                android:textColor="@color/tab_selected" />
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.Toolbar>

                <com.jht.doctor.widget.TabLayout
                    android:id="@+id/id_tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:visibility="gone" />
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_anchor="@+id/appBar"
            app:layout_anchorGravity="bottom"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/id_empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingTop="50dp"
            android:visibility="gone"
            app:layout_anchor="@+id/appBar"
            app:layout_anchorGravity="bottom"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/id_empty_img"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/msg_3" />

                <TextView
                    android:id="@+id/id_empty_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_empty_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:text="这里空空如也~"
                    android:textColor="@color/color_999"
                    android:textSize="14sp" />
            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>
        <RelativeLayout
            android:id="@+id/id_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:visibility="gone"
            android:background="@color/color_main">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/id_tv_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前应还 110,250.00 元"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/right_arrow"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>


</android.support.v4.widget.SwipeRefreshLayout>