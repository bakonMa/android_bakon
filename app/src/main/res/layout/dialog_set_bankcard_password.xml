<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/id_iv_close"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/close"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/id_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="@color/color_666"
        android:text="设置交易密码"
        android:layout_marginTop="9dp"/>

    <TextView
        android:id="@+id/id_tv_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定招商银行卡(尾号2345)"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/color_000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用过的银行卡"
        android:textSize="12sp"
        android:textColor="@color/color_999"/>
    <com.renxin.doctor.activity.widget.PasswordInputView
        android:id="@+id/id_ed_password"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:cursorVisible="false"
        android:inputType="number"
        android:maxLength="6"
        app:pivBorderColor="@color/color_main"
        app:pivBorderWidth="0.5dp"
        app:pivPasswordColor="@color/color_000"
        app:pivBorderRadius="0dp"
        app:pivPasswordWidth="5dp"
        app:pivPasswordRadius="3dp"
        app:pivPasswordLength="6" />
    <LinearLayout
        android:layout_marginBottom="26dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:enabled="false"
            android:background="@drawable/selector_bg_button_login"
            android:text="确认使用"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>