<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_main"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/id_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:elevation="5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.renxin.doctor.activity.widget.BottomBarItem
            android:id="@+id/tab_home"
            style="@style/home_botton_text"
            app:iconDrawable="@drawable/tab_home_btn"
            app:itemText="@string/home_workroom"
            app:itemTextSize="12sp"
            app:textColorNormal="@color/color_000"
            app:textColorSelected="@color/color_4f9ef3" />

        <com.renxin.doctor.activity.widget.BottomBarItem
            android:id="@+id/tab_patient"
            style="@style/home_botton_text"
            app:iconDrawable="@drawable/tab_home_btn"
            app:itemText="@string/home_patient"
            app:itemTextSize="12sp"
            app:textColorNormal="@color/color_000"
            app:textColorSelected="@color/color_4f9ef3" />

        <com.renxin.doctor.activity.widget.BottomBarItem
            android:id="@+id/tab_find"
            style="@style/home_botton_text"
            app:iconDrawable="@drawable/tab_home_btn"
            app:itemText="@string/home_find"
            app:itemTextSize="12sp"
            app:textColorNormal="@color/color_000"
            app:textColorSelected="@color/color_4f9ef3" />

        <com.renxin.doctor.activity.widget.BottomBarItem
            android:id="@+id/tab_me"
            style="@style/home_botton_text"
            app:iconDrawable="@drawable/tab_home_btn"
            app:itemText="@string/home_me"
            app:itemTextSize="12sp"
            app:textColorNormal="@color/color_000"
            app:textColorSelected="@color/color_4f9ef3" />


    </LinearLayout>

</LinearLayout>
